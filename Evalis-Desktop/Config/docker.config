<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!--
    EVALIS Desktop - Docker Configuration

    This file contains Docker-specific settings for the PostgreSQL database container.
    Used by DockerManager.vb for container lifecycle management.
  -->

  <appSettings>
    <!-- Docker Container Settings -->
    <add key="ContainerName" value="evalis-db" />
    <add key="DockerComposePath" value="database/docker/docker-compose.yml" />

    <!-- Container Startup Settings -->
    <add key="StartupTimeoutSeconds" value="120" />
    <add key="HealthCheckIntervalSeconds" value="2" />

    <!-- Auto-start Docker Desktop if not running (Windows only) -->
    <add key="AutoStartDockerDesktop" value="true" />

    <!-- Database Connection Settings (for Docker) -->
    <add key="DockerDatabaseHost" value="localhost" />
    <add key="DockerDatabasePort" value="5432" />
    <add key="DockerDatabaseName" value="evalis_db" />
    <add key="DockerDatabaseUser" value="evalis_user" />
    <add key="DockerDatabasePassword" value="evalis2024" />

    <!-- Logging -->
    <add key="EnableDockerLogging" value="true" />
    <add key="DockerLogLevel" value="Debug" />

    <!-- Feature Flags -->
    <add key="RequireDocker" value="true" />
    <add key="ShowSplashScreen" value="true" />
    <add key="AllowSkipDatabaseCheck" value="false" />

  </appSettings>
</configuration>
