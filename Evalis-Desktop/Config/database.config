<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!--
    EVALIS Desktop - Database Configuration

    This file contains the PostgreSQL database connection settings.

    IMPORTANT:
    - Never commit passwords to version control
    - Use environment variables for production deployments
    - Ensure this file has restricted read permissions
  -->

  <connectionStrings>
    <!-- Development Database -->
    <add name="EvalisDbDevelopment"
         connectionString="Server=localhost;Port=5432;Database=evalis_db;User Id=evalis_user;Password=evalis2024;Timeout=30;CommandTimeout=30;"
         providerName="Npgsql" />

    <!-- Production Database (Example - Update with actual values) -->
    <add name="EvalisDbProduction"
         connectionString="Server=production-server;Port=5432;Database=evalis_db;User Id=evalis_user;Password=CHANGE_ME;Timeout=30;CommandTimeout=30;SslMode=Require;"
         providerName="Npgsql" />
  </connectionStrings>

  <appSettings>
    <!-- Active connection string name -->
    <add key="ActiveConnection" value="EvalisDbDevelopment" />

    <!-- Session timeout in minutes -->
    <add key="SessionTimeout" value="30" />

    <!-- Enable query logging for debugging -->
    <add key="EnableQueryLogging" value="true" />

    <!-- Maximum connection pool size -->
    <add key="MaxPoolSize" value="20" />
  </appSettings>
</configuration>
